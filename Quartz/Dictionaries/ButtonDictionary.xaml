<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="SideButtonStyle" TargetType="{x:Type Button}">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="FontFamily" Value="Arial"/>
        <Setter Property="HorizontalContentAlignment" Value="Left"/>
        <Setter Property="Foreground" Value="#FF222222"/>
        <Setter Property="Height" Value="25"/>
        <Setter Property="TextOptions.TextFormattingMode" Value="Display"/>
    </Style>

    <ControlTemplate x:Key="SideButtonTemplate" TargetType="{x:Type Button}">
        <Border x:Name="bdr_main" Margin="0" BorderThickness="0" Background="#FFFFFFFF">
            <ContentPresenter x:Name="bdr_txt" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,0" ContentSource="Content"/>
        </Border>
        <ControlTemplate.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter TargetName="bdr_main" Property="Background" Value="#FFDDDDDD"/>
                <Setter TargetName="bdr_txt" Property="TextBlock.Foreground" Value="#FF344055"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter TargetName="bdr_main" Property="Background" Value="#FFCCCCCC"/>
                <Setter TargetName="bdr_txt" Property="TextBlock.Foreground" Value="#FF000000"/>
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

    <Style x:Key="ActionButtonStyle" TargetType="{x:Type Button}">
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="BorderBrush" Value="#FFEDEDED"/>
        <Setter Property="Background" Value="#FFEDEDED"/>
        <Setter Property="Foreground" Value="#FF7D7D7D"/>
        <Setter Property="Height" Value="28"/>
    </Style>

    <ControlTemplate x:Key="ActionButtonTemplate" TargetType="{x:Type Button}">
        <Border x:Name="bdr_main" Margin="0" BorderThickness="0" Background="Transparent">
            <ContentPresenter x:Name="bdr_txt" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="8,6,8,6" ContentSource="Content" />
        </Border>
        <ControlTemplate.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter TargetName="bdr_main" Property="Background" Value="#fff"/>
                <Setter TargetName="bdr_txt" Property="TextBlock.Foreground" Value="#333"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter TargetName="bdr_main" Property="Background" Value="#fff"/>
                <Setter TargetName="bdr_txt" Property="TextBlock.Foreground" Value="#222"/>
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

</ResourceDictionary>