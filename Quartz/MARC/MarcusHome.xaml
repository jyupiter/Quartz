        <Image HorizontalAlignment="Left" Height="35" Margin="255,264,0,0" VerticalAlignment="Top" Width="35" Source="../Resources/sms-512.png" RenderTransformOrigin="1.143,0.429"/>
        <Image HorizontalAlignment="Left" Height="35" Margin="255,304,0,0" VerticalAlignment="Top" Width="35" Source="../Resources/email-512.png" RenderTransformOrigin="1.143,0.429"/>
        <Label Content="My current settings" HorizontalAlignment="Left" Margin="55,59,0,0" VerticalAlignment="Top" Width="170"/>
